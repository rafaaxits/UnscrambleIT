<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list"
    tools:context=".view.activities.UnscrambleIT_Home"
    android:background="@color/yellow_AppBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:background="@color/blue_AppNameBackground"
            android:textColor="@color/white_AppName"
            android:textSize="35dp"
            android:textAlignment="center"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/btnBeginner"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="top|left"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff"
                android:background="@drawable/round_button"/>
            <ImageView
                android:id="@+id/imgBeginners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beginner"
                android:adjustViewBounds="true"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="top|left"
                android:maxWidth="55dp"
                android:maxHeight="55dp"
                android:scaleType="fitCenter"
                android:elevation="55dp"/>
            <TextView
                android:id="@+id/txtBeginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtBeginner"
                android:textColor="@color/black_txtLevels"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="top|left"/>

            <Button
                android:id="@+id/btnIntermidiate"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|center"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff"
                android:background="@drawable/round_button"/>
            <ImageView
                android:id="@+id/imgIntermidiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intermidiate"
                android:adjustViewBounds="true"
                android:layout_marginTop="85dp"
                android:layout_gravity="top|center"
                android:maxWidth="55dp"
                android:maxHeight="55dp"
                android:scaleType="fitCenter"
                android:elevation="55dp"/>

            <TextView
                android:id="@+id/txtIntermidiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtIntermediate"
                android:textColor="@color/black_txtLevels"
                android:layout_marginTop="160dp"
                android:layout_gravity="top|center"/>

            <Button
                android:id="@+id/btnAdvanced"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="75dp"
                android:layout_gravity="top|right"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff"
                android:background="@drawable/round_button"/>
            <ImageView
                android:id="@+id/imgAdvanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/advanced"
                android:adjustViewBounds="true"
                android:layout_marginTop="85dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="top|right"
                android:maxWidth="55dp"
                android:maxHeight="55dp"
                android:scaleType="fitCenter"
                android:elevation="55dp"/>

            <TextView
                android:id="@+id/txtAdvanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtAdvanced"
                android:layout_marginRight="10dp"
                android:textColor="@color/black_txtLevels"
                android:layout_marginTop="160dp"
                android:layout_gravity="top|right"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <Button
                android:id="@+id/btnRank"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="left|center"
                android:background="@drawable/round_button"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#fff" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:adjustViewBounds="true"
                android:layout_marginLeft="7dp"
                android:elevation="40dp"
                android:maxWidth="50dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ranking"/>
            <TextView
                android:id="@+id/txtRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="35dp"
                android:text="@string/txtRanking"
                android:textColor="@color/black_txtLevels" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
